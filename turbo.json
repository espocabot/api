{
	"$schema": "https://turborepo.com/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"lint:fix": {
			"dependsOn": [
				"^lint:fix"
			]
		},
		"typecheck": {
			"dependsOn": [
				"^typecheck"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": [
				"^test"
			]
		}
	}
}