{
  "extends": "@spark/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": [
      "@cloudflare/workers-types",
      "bun-types"
    ],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}